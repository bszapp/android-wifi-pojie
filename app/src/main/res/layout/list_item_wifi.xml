<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/icon_wifi"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_wifi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/wifi_icon_description" />

    <TextView
        android:id="@+id/text_wifi_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/icon_wifi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_select_network" />

    <TextView
        android:id="@+id/text_wifi_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/icon_wifi"
        app:layout_constraintTop_toBottomOf="@id/text_wifi_name"
        app:layout_constraintEnd_toStartOf="@id/button_select_network" />

    <Button
        android:id="@+id/button_select_network"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_network_button_text"
        android:backgroundTint="@color/main_color"
        style="@style/App.button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
