                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_widgets"
                            app:tint="@color/main_color" />
                    </FrameLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="后台运行"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="8dp"
                        android:paddingEnd="0dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用于在后台运行任务"
                    android:paddingTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="省电策略"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"
                    android:paddingTop="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="为了避免系统误杀后台，请将省电策略改为无限制"
                    android:paddingTop="8dp" />
                <Button
                    android:id="@+id/battery_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="去设置"
                    style="@style/App.button"
                    android:drawableStart="@drawable/ic_send"
                    android:layout_gravity="end" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="top"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_info"
                        app:tint="@color/grey" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="由于各厂商会对应用后台运行进行不同的限制，可能还需要进行额外设置，请自行查阅相应资料" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="后台通知"
                    android:textStyle="bold"
                    android:textColor="@color/main_color"
                    android:paddingTop="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用于显示运行进度以及连接成功等通知"
                    android:paddingTop="8dp" />
                <Button
                    android:id="@+id/notification_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="点击授权"
                    style="@style/App.button"
                    android:drawableStart="@drawable/ic_send"
                    android:layout_gravity="end" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:ignore="TooManyViews" />
    </LinearLayout>
</ScrollView>
